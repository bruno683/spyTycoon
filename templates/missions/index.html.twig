{% extends 'base.html.twig' %}
{% block title %}Missions index{% endblock %}

{% block body %}
    <h1>Missions index</h1>

    <table class="table table-dark table-striped px-2 ">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">CodeName</th>
                <th scope="col">Country</th>
                <th scope="col">Description</th>
                <th scope="col">Type</th>
                <th scope="col">Status</th>
                <th scope="col">StartDate</th>
                <th scope="col">EndDate</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr scope="row">
                <td >{{ mission.id }}</td>
                <td >{{ mission.title }}</td>
                <td >{{ mission.codeName }}</td>
                <td >{{ mission.country }}</td>
                <td >{{ mission.description }}</td>
                <td >{{ mission.type }}</td>
                <td >{{ mission.status }}</td>
                <td >{{ mission.startDate ? mission.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td >{{ mission.endDate ? mission.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td >
                    <a href="{{ path('missions_show', {'id': mission.id}) }}">show</a>
                    <a href="{{ path('missions_edit', {'id': mission.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('missions_new') }}">Cr√©er une nouvelle mission</a>
{% endblock %}
