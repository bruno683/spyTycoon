{% extends 'base.html.twig' %}

{% block title %}Targets{% endblock %}

{% block body %}
    <h1>Targets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ target.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ target.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ target.firstName }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ target.birthDate ? target.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CodeName</th>
                <td>{{ target.codeName }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ target.nationality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('targets_index') }}">back to list</a>

    <a href="{{ path('targets_edit', {'id': target.id}) }}">edit</a>

